[wordpress]
listen = /run/php/php7.0-fpm.sock;
listen.owner = www-data
listen.group = www-data
listen.mode = 0660
user = {{wp_user_name}}
group = {{wp_group}}
pm = dynamic
pm.max_children = 10
pm.start_servers = 1
pm.min_spare_servers = 1
pm.max_spare_servers = 3
pm.max_requests = 500
chdir = {{wp_path}}
php_admin_value[open_basedir] = {{wp_path}}:/tmp
